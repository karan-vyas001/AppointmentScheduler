<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1>My Appointments</h1>
  <%= link_to 'New Appointment', new_appointment_path, class: "btn btn-info" %>
</div>

<%= month_calendar do |date| %>
  <%= date.day %>
  <% @appointments.each do |appointment| %>
    <% if date == appointment.date %>
      <%= link_to appointment, remote: true do  %>
        <%= appointment.user.full_name %> - <%= appointment.start_time.localtime.strftime("%I:%M %p") %> - <%= appointment.end_time.localtime.strftime("%I:%M %p") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="modal show_appointment"></div>